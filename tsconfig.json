// trading-platform-backend/tsconfig.json
{
  "compilerOptions": {
    "target": "es2022", /* Specify ECMAScript target version */
    "module": "commonjs", /* Specify module code generation */
    "lib": [
      "es2022",
      "dom"
    ], /* Specify library files to be included in the compilation */
    "outDir": "./dist", /* Redirect output structure to the directory */
    "rootDir": "./src", /* Specify the root directory of input files */
    "strict": true, /* Enable all strict type-checking options */
    "esModuleInterop": true, /* Emit additional JavaScript to ease support for importing CommonJS modules */
    "skipLibCheck": true, /* Skip type checking of declaration files */
    "forceConsistentCasingInFileNames": true, /* Disallow inconsistently-cased file names */
    "moduleResolution": "node", /* Resolve modules using Node.js style */
    "sourceMap": true /* Generates corresponding .map file */
  },
  "include": [
    "src/**/*.ts"
  ], /* Specify which files to include in the compilation */
  "exclude": [
    "node_modules"
  ] /* Specify which files to exclude from the compilation */
}